{
  "name": "@kronos/core",
  "projectType": "library",
  "sourceRoot": "libs/kronos-core/src",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/kronos-core",
        "tsConfig": "libs/kronos-core/tsconfig.lib.json",
        "packageJson": "libs/kronos-core/package.json",
        "main": "libs/kronos-core/src/index.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/kronos-core/jest.config.ts"
      }
    }
  },
  "tags": ["type:lib", "scope:shared"]
}
